@model IEnumerable<BaseModel.Produto>

@{
    ViewBag.Title = "Lista de Produtos";
}

<h2>@ViewBag.Title</h2>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._Maquina.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._Maquina.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProdutoID }) |
            @Html.ActionLink("Informações", "Details", new { id=item.ProdutoID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ProdutoID })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Adicionar Produto", "Create", null, new { @class = "btn btn-primary" })
</p>