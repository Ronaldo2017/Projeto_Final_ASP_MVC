<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong></strong>@TempData["Mensagem"]
        </div>
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Máquina<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Cadastro Máquina", "Create", "Maquinas")

                            </li>

                            <li>
                                @Html.ActionLink("Listar Máquina", "Index", "Maquinas")

                            </li>
                        </ul>
                </ul>

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Produto<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Cadastro Produto", "Create", "Produtoes")

                            </li>

                            <li>
                                @Html.ActionLink("Listar Produto", "Index", "Produtoes")

                            </li>
                        </ul>
                </ul>

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Ferramenta<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Criar Lote", "Create", "CriarLotes")

                            </li>

                            <li>
                                @Html.ActionLink("Listar Lote", "Index", "CriarLotes")

                            </li>

                            <li>
                                @Html.ActionLink("Cadastro Ferramenta", "Create", "Ferramentas")

                            </li>

                            <li>
                                @Html.ActionLink("Listar Ferramenta", "Index", "Ferramentas")

                            </li>

                            <li>
                                @Html.ActionLink("Cadastrar Lote", "Index", "Lotes")

                            </li>

                            <li>
                                @Html.ActionLink("Listar Lote", "Index", "Lotes")

                            </li>
                        </ul>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Movimentação<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Estoque", "Create", "Estoques")

                            </li>

                            <li>
                                @Html.ActionLink("Manutenção", "Index", "Manutencaos")

                            </li>

                            <li>
                                @Html.ActionLink("Produção", "Index", "Producaos")

                            </li>


                        </ul>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now</p>
        </footer>
    </div>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
